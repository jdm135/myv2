<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
  <div class="wrapper steps campaign landing">
    <div class="parent">

        <!-- Top Nav -->
        <% include ../partials/header %>

            <!-- Container -->
            <div class="content container">
                <div class="info-container clearfix">
                    <form action="/campaigns/revive" method="post">
                        <div class="steps-container">
                            <div class="step step-one active">
                                <h2>REVIVE</h2>
                                <div class="contain">
                                    <span>GOAL<span>(Number of Signatures)</span></span>
                                    <input type="text" id="reviveGoal" name="reviveGoal" placeholder="EX. 5000">
                                </div>
                                <div class="contain valid">
                                    <span>Show Name</span>
                                    <input type="text" id="reviveShowName" name="reviveShowName" placeholder="Friends">
                                </div>
                                <div class="contain error">
                                    <span>Campaign Title <span>(40 character limit)</span></span>
                                    <input type="text" id="reviveTitle" name="reviveTitle" placeholder="Friends needs to be revived!">
                                </div>
                                <div class="contain error">
                                    <span>Campaign Categry</span>
                                    <select id="reviveCategory" name="reviveCategory">
                                      <option>Category</option>
                                      <option>Category</option>
                                      <option>Category</option>
                                      <option>Category</option>
                                      <option>Category</option>
                                    </select>
                                </div>
                                <div class="contain">
                                    <a class="btn" data-val="two">NEXT</a>
                                </div>
                            </div>
                            <div class="step step-two">
                                <h2>ADD A PHOTO</h2>
                                <!-- <div class="contain clearfix">
                                    <span>Add Photo</span>
                                    <div class="add-photo"></div>
                                </div> -->
                                <div class="contain clearfix">
                                    <span>Add Photo URL</span>
                                    <input type="text" id="revivePhoto" name="revivePhoto" placeholder="add photo url">
                                </div>
                                <div class="contain clearfix">
                                    <span>Add Video URL</span>
                                    <input type="text" id="reviveVideo" name="reviveVideo" placeholder="add video url">
                                </div>
                                <div class="contain">
                                    <a class="btn" data-val="three">NEXT</a>
                                    <a class="back" data-val="one">Back</a>
                                </div>
                            </div>
                            <div class="step step-three">
                                <h2>TELL YOUR STORY</h2>
                                <div class="contain">
                                    <span>STORY</span>
                                    <textarea id="reviveStory" name="reviveStory">wysiwyg</textarea>
                                </div>
                                <div class="contain">
                                    <button type="submit" class="btn" data-val="four">DONE</button>
                                    <a class="back" data-val="two">Back</a>
                                </div>
                            </div>
                            <div class="step step-four final">
                                <h2>DONE</h2>
                                <div class="contain">
                                    <span>YOU ARE DONE. ADD MESSAGE/ICON OR REDIRECT.</span>
                                </div>
                            </div>
                        </div>
                    </form> <!--end form-->
                </div>
            </div>

            <!-- Footer -->
            <% include ../partials/footer %>
    </div>
  </div>
</body>
</html>
